<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: post, local: true) do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control margin-field' %>

      <%= f.label :content %>
      <%= f.text_area :content, class: 'form-control margin-field' %>

      <%= f.submit "Shout!", class: "btn btn-primary margin-top-4" %>
    <% end %>
  </div>
</div>
