<div class="container posts-board">
    <% @posts.each do |post| %>
    <div class="row">
      <div class="col-lg-2">
        <img class="img-fluid rounded mb-3 mb-md-0" src="https://picsum.photos/75/75?blur" alt="">
        <h3> <%= post.user.username if logged_in? %>
            <%= 'Anonimous' if !logged_in? %>
        </h3>
      </div>
      <div class="col-lg-10">
          <h1><%= post.title %></h3>
          <p><%= post.content %></p>
      </div>
    </div>
    <br><br>
    <% end %>
</div>
